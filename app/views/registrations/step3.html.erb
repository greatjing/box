<h1><%= @event.name %></h1>

<h2>Step 3</h2>

 <!-- 显示错误信息 -->
 <% if @registration.errors.any? %>
  <ul>
    <% @registration.errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  </ul>
 <% end %>


<%= form_for @registration, :url => update_step3_event_registration_path(@event, @registration) do |f| %>
  <div class="form-group">
    <%= f.label :website %>
    <%= f.url_field :website, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bio %>
    <%= f.text_field  :bio , :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= link_to "Previous", step2_event_registration_path(@event, @registration), :class => "btn btn-primary" %>
    <%= f.submit "sumbimt", :class => "btn btn-primary" %>
  </div>
<% end %>
